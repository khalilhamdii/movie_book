<%= notice_bar %>
<div class="p-2">
  <div class="row no-gutters flex-wrap">
    <% @articles.each do |article| %>
      <div class="card card-image col-6 article ">
        <div class="background-pattern"></div>
        <div class="d-flex h-100">
          <% if article.image.attached? %>
            <%= image_tag(article.image, alt: "article image", class: "h-100 w-50") %>
          <% end %>
          <!-- Content -->
          <div class="text-dark text-left d-flex flex-column w-50 p-3 high-z">
            <div class="d-flex">
              <% article.categories.each do |category| %>
                <%= link_to category.name.capitalize, category, class: "custom-orange-text font-weight-bold thick-border-bottom mr-3" %>
              <% end %>
            </div>
            <h4 class="card-title pt-2"><strong><%= link_to "#{article.title}", article, class: "brown-text" %></strong></h4>
            <p class="d-inline-block text-truncate art-content-summary"><%= article.description %></p>
            <%= link_to "Read More", article, class: "custom-orange-text  font-weight-bold"%>
            <div class="mt-auto ">
              <%= number_of_votes(article) %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
