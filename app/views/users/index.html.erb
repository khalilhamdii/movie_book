<%= notice_bar %>
<div class="container mt-5">
  <div class="card card-image p-4">
    <h3 class="amber-text font-weight-bold">User settings</h3>
    <table>
      <thead class="amber-text">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= current_user.name %></td>
          <td><%= current_user.email %></td>
          <td><%= link_to 'Edit', edit_user_path(current_user), class: "amber-text" %></td>
          <td><%= link_to 'Destroy', current_user, method: :delete, data: { confirm: 'Are you sure?' }, class: "amber-text" %></td>
        </tr>
      </tbody>
    </table>
    <br>
    <button onclick="location.href = '../';" class="btn btn-sm btn-amber rounded-pill" >Home page</button>
  </div>
</div>
