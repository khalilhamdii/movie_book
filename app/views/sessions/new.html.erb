<%= notice_bar %>
<!--main-section-->
<main class="container  mt-4">
  <!-- sign up form-->
  <div class="card w-50 m-auto">
    <h3 class="card-header  amber accent-3 white-text text-center py-4">
      <strong >Login</strong>
    </h3>
    <div class="card-body brown lighten-5 px-lg-5">
      <%= form_tag sessions_path do %>
        <%= alert_error %>
        <div class='input-field'>
          <div class="labels">
            <label>
              Email : 
            </label>
          </div>
          <%= text_field_tag(:email, '', class: 'form-control', placeholder: 'Please enter your email' ) %>
        </div>
        <%= submit_tag 'Submit', :class => 'btn btn-block btn-brown rounded-pill z-depth-1 mt-5 mb-3' %>
        <button type="button" onclick="location.href = 'signup';" class="btn btn-amber btn-block rounded-pill z-depth-1  mb-3" >Sign Up</button>
        <button type="button" onclick="location.href = 'home';" class="btn btn-warning btn-block rounded-pill z-depth-1 mb-3" >Home page</button>
      <% end %>
    </div>
  </div>
</main>
