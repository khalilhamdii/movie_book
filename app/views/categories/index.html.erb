<%= notice_bar %>
<div class="p-2">
  <%= featured_article %>
  <div class="row no-gutters flex-wrap">
    <% @categories.each do |category| %>
      <% article = top_article(category) %>
      <div class="card card-image col-lg-3 col-sm-6 bg-img"
  style="background-image: url(<%= (url_for(article.image))%>);">
        <!-- Content -->
        <div class="text-white text-left h-100  bg-gradient p-3">
          <div>
            <h3><%= link_to "#{category.name }", category, class: "text-white font-weight-bold yellow-border-bottom mb-5" %></h3>
            <h5 class="card-title pt-2 mt-5 pt-5"><strong><%= link_to article.title, article, class: "text-white" %></strong></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
